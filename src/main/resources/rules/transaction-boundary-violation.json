{
  "id": "TX-BOUNDARY-001",
  "name": "No Remote Calls Inside Transaction",
  "enabled": true,
  "severity": "BLOCKER",
  "confidence": "HIGH",
  "description": "Remote calls inside @Transactional methods extend transaction time unnecessarily",
  "target": {
    "type": "ANNOTATED_METHOD",
    "annotation": "Transactional"
  },
"constraints": {
  "mustNotInvokeAnnotatedMethods": [
    "FeignClient",
    "RestTemplate",
    "WebClient"
  ],
  "maxCallDepth": 10
},
"rationale": {
  "why": "Long-running network calls hold DB connections.",
  "impact": "Connection pool exhaustion, performance degradation."
  },
"remediation": {
  "summary": "Move remote call outside transaction.",
  "options": [
    "Fetch data before starting transaction",
    "Process remote call after transaction commit"
  ]
},
"tags": [
  "transaction",
  "performance",
  "database"
]
}
